---
import { GoArrowUpRight } from "react-icons/go";
import BlogCard from "./BlogCard.astro";

export type Blog = {
	src: string,
    alt: string,
    title: string,
    subtitleFirstLine: string,
    subtitleSecLine: string
}

const Blogs : Blog[] = [
	{
		src: "./images/blog3.png",
		alt: "blog3",
		title: "Learning with Games?",
		subtitleFirstLine: "Embrace the joy of games to enhance your",
    	subtitleSecLine: "learning experience!"
	},
	{
		src: "./images/blog1.png",
		alt: "blog1",
		title: "10 Learning Game Ideas",
		subtitleFirstLine: "10 ideas for learning with for your kids to",
    	subtitleSecLine: "have fun."
	},
	{
		src: "./images/blog2.png",
		alt: "blog2",
		title: "Fun Activities for Kids",
		subtitleFirstLine: "Want to do something outside from your",
    	subtitleSecLine: "laptop? Here are our recommendations."
	},
]
---

<section class="my-20 sm:max-w-[1350px] 2xl:max-w-[1450px] mx-auto px-4">
		<div class="flex flex-col sm:flex-row justify-between  sm:items-center gap-y-4 sm:gap-y-0">
			<h1 class="text-[64px] font-medium leading-20">
				Read our 
				<span class="courgette font-medium text-7xl text-[#704FE6]">blog</span>
			</h1>

			<div class="flex justify-end sm:justify-normal items-center gap-4 cursor-pointer group">
				<p class="text-[#704FE6] font-semibold">See All</p>
				<div class="bg-[#704FE6] p-4 rounded-full group-hover:rotate-45 transition-transform duration-300">
					<GoArrowUpRight color="white"/>
				</div>	
			</div>
		</div>
		
		<div class="flex flex-col sm:flex-row justify-center items-center gap-10 my-16">
			{	Blogs.map((blog) => <BlogCard {...blog}/>)	}
		</div>
</section>