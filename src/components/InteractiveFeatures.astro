import Insignia from "./svgDecorations/InteractiveFeaturesDecorations/CardOne/Insignia.astro";
import Spiral from "./svgDecorations/InteractiveFeaturesDecorations/CardOne/Spiral.astro";

import InsigniaTwo from "./svgDecorations/InteractiveFeaturesDecorations/CardTwo/Insignia.astro";
