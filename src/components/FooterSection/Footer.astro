---
import LinksColumnFooter from "./LinksColumnFooter.astro";
import IconFacebook from "./FooterDecorations/IconFacebook.astro";
import IconInstagram from "./FooterDecorations/IconInstagram.astro";
import IconX from "./FooterDecorations/IconX.astro";
import Stains from "./FooterDecorations/Stains.astro";

const columnOne = ["Home", "App", "About", "People"]
const columnTwo = ["For school", "Brain training", "E-learning", "Online modules"]
const columnThree = ["Media", "Support Us", "Contact", "Places"]
---

<footer class="mt-32 mb-12 sm:max-w-[1300px] 2xl:max-w-[1450px] mx-auto flex flex-col sm:flex-row gap-y-10 sm:gap-y-0 items-center sm:items-start justify-between px-4">
	<div class="space-y-6 sm:space-y-10">
		<div class="flex items-center gap-3">
			<img 
			  src="./Logo.png" 
			  alt="logo"
			>
			<p class="text-lg font-semibold">WonderKids</p>
		</div>
	
		<Stains/>
	</div>

	<div class="flex flex-col sm:flex-row items-center sm:items-start gap-10 sm:gap-20">
		<div class="flex gap-x-10 sm:gap-x-20 font-medium text-[#636363]">
			<LinksColumnFooter links={columnOne}/>
			<LinksColumnFooter links={columnTwo}/>
			<LinksColumnFooter links={columnThree}/>
		</div>

		<div class="flex items-start gap-2">
			<IconInstagram/>
			<IconFacebook/>
			<IconX/>
		</div>
	</div>
</footer>
<p class="text-center font-medium text-gray-100 hover:text-white w-full py-3 bg-[#704FE6]">
	&copy; 
	<a 
	  href="https://estebanfandos.com" 
	  target="_blank"
	>
	 Esteban Fandos
	</a>
</p>