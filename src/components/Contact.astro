---
import SmallsCircles from "./svgDecorations/InteractiveFeaturesDecorations/CardThree/SmallsCircles.astro";
---

	<section id="contact" class="mt-32 px-4">
		<div class="relative bg-[#704FE6] sm:max-w-[1350px] 2xl:max-w-[1450px] mx-auto rounded-[50px] sm:rounded-[64px] px-10 py-22 sm:py-16 sm:px-14 flex justify-center sm:justify-end">
			<div class="flex flex-col sm:mr-18 gap-10">
				<h1 class="text-5xl sm:text-6xl leading-12 text-white font-medium">
					Join our 
					<span class="courgette text-[#FFBE17] flex items-center gap-3 h-fit">
						<svg width="85" height="83" viewBox="0 0 91 89" fill="none" xmlns="http://www.w3.org/2000/svg">
							<g opacity="0.3">
							<path d="M45.5006 23.6406C45.5006 35.1609 36.1465 44.5 24.6077 44.5H3.71484V23.6406C3.71484 12.1203 13.0689 2.78125 24.6077 2.78125C36.1465 2.78125 45.5006 12.1203 45.5006 23.6406Z" fill="white"/>
							<path d="M45.501 65.3594C45.501 53.8391 54.855 44.5 66.3938 44.5H87.2867V65.3594C87.2867 76.8797 77.9326 86.2188 66.3938 86.2188C54.855 86.2188 45.501 76.8797 45.501 65.3594Z" fill="white"/>
							<path d="M3.71484 65.3594C3.71484 76.8797 13.0689 86.2188 24.6077 86.2188H45.5006V65.3594C45.5006 53.8391 36.1465 44.5 24.6077 44.5C13.0689 44.5 3.71484 53.8391 3.71484 65.3594Z" fill="white"/>
							<path d="M87.2867 23.6406C87.2867 12.1203 77.9326 2.78125 66.3938 2.78125H45.501V23.6406C45.501 35.1609 54.855 44.5 66.3938 44.5C77.9326 44.5 87.2867 35.1609 87.2867 23.6406Z" fill="white"/>
							</g>
						</svg>
						WonderKids
					</span> 
					community now
				</h1>

				<div class="flex flex-col gap-4">
					<input 
					type="text"
					placeholder="Name"
					maxlength="35"
					class="bg-white rounded-[64px] p-4 focus:outline-none"
					>

					<input 
					type="text"
					placeholder="Email or Phone"
					maxlength="35"
					class="bg-white rounded-[64px] p-4 focus:outline-none"
					>
				</div>

				<p class="cursor-pointer bg-[#FFB802] p-4 rounded-[64px] w-[220px] font-semibold text-center place-self-end sm:place-self-auto hover:opacity-95">Submit</p>
			</div>

			<img src="./images/contact.png" alt="Contact" class="hidden sm:block absolute z-10 left-5 bottom-0">
			<SmallsCircles hidden="hidden sm:block" left="left-0" top="top-40" width={138} opacity="0.3"/>
		</div>
	</section>